@model IList<Nop.Web.Models.Catalog.ProductOverviewModel>
@{
    Layout = "";
}
@if (Model.Count > 0)
{
 <article class="slide-border">  
    <div class="product-grid home-page-newproduct-grid">
        <div class="title mid-content-title product-heading">
            <h2>@T("Products.NewProducts")</h2>
            <span class="float-right">
                <a class="carousel-control-prev" href="#carousel-example-generic-homepage-newproduct" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control-next" href="#carousel-example-generic-homepage-newproduct" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </span>
        </div>
     <div id="carousel-example-generic-homepage-newproduct" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{
               var ci = 0;
            }
            @foreach (var item in Model)
            {
                if (ci == 0)
                {
                    @:<div class="item carousel-item active">
                    @:<div class="row box-products">
                }
                else if (ci % 2 == 0)
                {
                    @:<div class="item carousel-item">
                    @:<div class="row box-products">
                 }
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="item-box offer offer-default">                                                   
                         @await Html.PartialAsync("_ProductBox", item)                        
                    </div>
                </div>
                if (ci % 2 == 1)
                {
                    @:</div>
                    @:</div>
                }
                ci++;
            }
            @if (ci % 2 == 1)
            {
            @:</div>
            @:</div>
           }
        </div>
    </div>
        @*<div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>*@
    </div>
  </article>   
}