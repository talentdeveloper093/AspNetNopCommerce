@model ChangePasswordModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}
@section left
    {
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = CustomerNavigationEnum.ChangePassword })
}
<div class="page account-page change-password-page">
    <div class="page-title">
        <h3>@T("Account.MyAccount") - @T("Account.ChangePassword")</h3>
    </div>
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="result alert alert-success">
                @Model.Result
            </div>
        }
        <form asp-route="CustomerChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="message-error alert alert-danger"></div>
            <div class="fieldset form-horizontal">
               <div class="form-fields">
                <div class="form-group row">
                    <label asp-for="OldPassword" asp-postfix=":" class="col-md-3 col-form-label "></label>
                    <div class="col-md-9">
                        <input asp-for="OldPassword" class="form-control" />
                        <div class="d-inline-block required-error">
                            <strong class="d-none d-md-inline-block"><nop-required /></strong>
                            <span asp-validation-for="OldPassword"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NewPassword" asp-postfix=":" class="col-md-3 col-form-label "></label>
                    <div class="col-md-9">
                        <input asp-for="NewPassword" class="form-control" />
                        <div class="d-inline-block required-error">
                            <strong class="d-none d-md-inline-block"><nop-required /></strong>
                            <span asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmNewPassword" asp-postfix=":" class="col-md-3 col-form-label "></label>
                    <div class="col-md-9">
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <div class="d-inline-block required-error">
                            <strong class="d-none d-md-inline-block"><nop-required /></strong>
                            <span asp-validation-for="ConfirmNewPassword"></span>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-3 col-md-9">
                    <div class="buttons">
                        <input type="submit" class="btn btn-default change-password-button" value="@T("Account.ChangePassword.Button")" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
