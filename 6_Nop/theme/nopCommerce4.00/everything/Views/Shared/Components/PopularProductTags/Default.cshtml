@model PopularProductTagsModel
@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-tags panel-default side-nav">
        <div class="panel-heading">
            <h3>@T("Products.Tags.Popular")</h3>           
        </div>
        <div class="listbox panel-body">
            <div class="tags">
                <ul>
                    @foreach (var item in Model.Tags)
                    {
                        <li><a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.SeName })" style="font-size:@(Model.GetFontSize(item))%;">@item.Name</a>&nbsp;&nbsp;
                        </li>
                    }
                </ul>
            </div>
            @if (Model.TotalTags > Model.Tags.Count)
            {
                <div class="view-all">
                    <a href="@Url.RouteUrl("ProductTagsAll")" class="btn btn-sm btn-default">@T("Products.Tags.Popular.ViewAll")</a>
                </div>
            }
        </div>
    </div>
}