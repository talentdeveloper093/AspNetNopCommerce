@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{  
    <div class="also-purchased-products-grid">
        <div class="title mid-content-title heading">
            <h2>@T("Products.AlsoPurchased")</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-4 col-md-3 clearfix">
                    <div class="item-box product-grid product-align">@await Html.PartialAsync("_ProductBox", item)</div>
                </div>
            }
        </div>
    </div>
}