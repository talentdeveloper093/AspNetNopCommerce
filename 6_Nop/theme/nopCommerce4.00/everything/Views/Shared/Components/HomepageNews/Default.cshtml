@model HomePageNewsItemsModel
@if (Model.NewsItems.Count > 0)
{
   <div class="container">  
    <div class="news-list-homepage row">
        <div class="col-md-12">
            <div class="title mid-content-title heading">
                <h2>@T("News")</h2>
            </div>
        </div>
        <div class="news-items">
            @foreach (var item in Model.NewsItems)
            {
                <div class="col-md-4 col-sm-4">
                    <div class="item">
                        <div class="news-head">
                           <h3> <a class="news-title" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">
                                @item.Title
                            </a></h3>
                            <span class="news-date">
                                -
                                @item.CreatedOn.ToString("D")
                            </span>
                        </div>
                        <div class="news-details">
                            @Html.Raw(item.Short)
                        </div>
                        <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="read-more">
                            @T("News.MoreInfo")
                        </a>
                    </div>
                </div>
            }
            <div class="view-all col-md-12 text-center">
                <a href="@Url.RouteUrl("NewsArchive")" class="btn btn-default"> @T("News.ViewAll") </a>
            </div>
        </div>
    </div>
  </div>
}