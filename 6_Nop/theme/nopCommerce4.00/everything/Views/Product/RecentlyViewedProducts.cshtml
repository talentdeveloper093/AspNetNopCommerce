@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-viewed-products-page");
}
<div class="page recently-viewed-products-page from-panel">
    <div class="page-title panel-heading heading">
        <h3>@T("Products.RecentlyViewedProducts")</h3>
    </div>
    <div class="page-body panel-body">
        @if (Model.Count > 0)
        {
            foreach (var product in Model)
            {
                <div class="item-box product-grid col-xs-12 col-sm-4 col-md-4 product-align clearfix">
                    <div class="offer offer-default">
                        @await Html.PartialAsync("_ProductBox", product)
                    </div>
                </div>
            }
        }
    </div>
</div>
