@model ProductDetailsModel
@if (Model.EmailAFriendEnabled)
{
    <div class="email-a-friend">
        <button type="button" value="" class="btn btn-default" onclick="setLocation('@Url.RouteUrl("ProductEmailAFriend", new { productId = Model.Id })')">
        <i class="fa fa-envelope fa-fw"></i> @*@T("Products.EmailAFriend")*@ </button>
    </div>
}
