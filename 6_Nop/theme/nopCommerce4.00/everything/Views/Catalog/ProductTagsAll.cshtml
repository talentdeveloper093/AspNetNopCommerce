@model PopularProductTagsModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.AllProductTags").Text);
    //page class
    Html.AppendPageCssClassParts("html-product-tags-all-page");
}
<div class="page product-tags-all-page from-panel">
    <div class="page-title panel-heading">
        <h3>@T("Products.Tags.All")</h3>
    </div>
    <div class="page-body panel-body">
        @if (Model.Tags.Count > 0)
        {
            <ul class="tags product-tags-list nav nav-pills">
                @foreach (var item in Model.Tags)
                {
                    <li>
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.SeName })" class="producttag">
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        }
    </div>
</div>
