@model TopicMoveModel
@{    
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("Forum.PageTitle.MoveTopic").Text);
    //page class
    Html.AppendPageCssClassParts("html-move-topic-page");
}
@await Component.InvokeAsync("ForumBreadcrumb", new { forumTopicId = Model.Id })
<div class="page move-topic-page">
    <div class="page-title">
        <h3>@T("Forum.MoveTopic")</h3>
    </div>
    <div class="page-body">
        <form asp-route="TopicMove" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="fieldset">
                <div class="form-fields">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@T("Forum.SelectTheForumToMoveTopic"):</label>
                        <div class="col-md-9">
                            <select asp-for="ForumSelected" asp-items="@(new SelectList(Model.ForumList, "Value", "Text"))" class="forum-topic-title-text form-control custom-select"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-3 col-md-9">
                    <div class="buttons">
                        <input type="submit" value="@T("Forum.Submit")" class="btn btn-default submit-forum-topic-button" />
                        <input type="button" class="btn btn-primary button-2 cancel-forum-topic-button" value="@T("Forum.Cancel")" onclick="setLocation('@Url.RouteUrl("TopicSlug", new { id = Model.Id, slug = Model.TopicSeName })')" />
                    </div>
                </div>
            </div>
          </form>
    </div>
</div>
