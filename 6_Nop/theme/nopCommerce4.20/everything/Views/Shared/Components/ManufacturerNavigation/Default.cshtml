@model ManufacturerNavigationModel
@if (Model.Manufacturers.Count > 0)
{
    <div class="block block-manufacturer-navigation side-nav">
        <div class="panel-heading title">
            <h3><span>@T("Manufacturers")</span> <i class="fas fa-angle-down"></i></h3>
        </div>
        <div class="side-nav-gbtbox showHide-ft">
            <ul>
                @foreach (var manufacturer in Model.Manufacturers)
                {
                    <li class="@(manufacturer.IsActive ? "active" : "inactive")">
                        <a href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })"> @manufacturer.Name</a>
                    </li>
                }
            </ul>
            @if (Model.TotalManufacturers > Model.Manufacturers.Count)
            {
                <div class="view-all">
                    <a class="read-more" href="@Url.RouteUrl("ManufacturerList")">@T("Manufacturers.ViewAll") <i class="fas fa-angle-double-right"></i></a>
                </div>
            }
        </div>
    </div>
}