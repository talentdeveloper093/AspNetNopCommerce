@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
  <div class="container"> 
    <article class="home-feature-product">
     <div class="product-grid home-page-product-grid">    
        <div class="title mid-content-title heading">
            <h2>@T("HomePage.Products")</h2>
            <span class="float-right">
            <a class="carousel-control-prev" href="#carousel-example-generic-homepage-product" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#carousel-example-generic-homepage-product" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
           </span>
        </div>
      <div id="carousel-example-generic-homepage-product" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{
                var ci = 0;
            }
            @foreach (var item in Model)
            {
                if (ci == 0)
                {
                    @:<div class="item carousel-item active">
                        @:<div class="row box-products">
                        }
                        else if (ci % 4 == 0)
                        {
                        @:<div class="item carousel-item">
                            @:<div class="row box-products">
                            }
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="offer offer-default">
                                    @await Html.PartialAsync("_ProductBox", item)
                                </div>
                            </div>
                            if (ci % 4 == 3)
                            {
                            @:</div>
                        @:</div>
                    }
                    ci++;
                  }
            @if (ci % 4 == 3)
            {
          @:</div>
         @:</div>
       }
        @*@foreach (var item in Model)
        {
        <div class="item-box col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
            <div class="card">
                <div class="card-body">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            </div>
        </div>
        }*@
        </div>
      </div>
    </div>
</article>
</div>
}