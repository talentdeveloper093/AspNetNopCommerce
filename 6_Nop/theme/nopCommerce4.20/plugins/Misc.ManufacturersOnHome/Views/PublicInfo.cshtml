@model IList<Nop.Plugin.Misc.ManufacturersOnHome.Models.ManufacturersOnHomeModel>
@{
    Layout = "";
}

@if (Model.Count > 0)
{
 <section class="manufactures mt-5 mb-5">
   <div class="container">    
    <div class="product-grid Manufacture-item home-page-product-grid">
        <div class="title mid-content-title heading">
            <h2>@T("Manufacturers")</h2>
            <span class="float-right">
                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                <a class="carousel-control-next" href="#myCarousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
            </span>
        </div>
        <div class="carousel slide mt-2" id="myCarousel">
        <div class="carousel-inner">
        <div class="item-grid row">
         @foreach (var item in Model)
            {
            <div class="item-box carousel-item">
                <div class="col-lg-2 col-md-4 col-6">
                  <div class="product-item">
                    <div class="picture">
                        <a href="@Url.RouteUrl("ManufacturerList")" title="@item.Name">
                            <img alt="@item.Name" src="@item.PictureUrl" title="@item.Name" />
                        </a>
                    </div>
                  </div> 
                </div>
            </div>
          }
       </div> 
      </div>
     </div>  
    </div>
  </div>
  <script>
        $(document).ready(function () {
        $('.manufactures .carousel .carousel-item:first-child').addClass('active');
            $('.manufactures #myCarousel').carousel({
                interval: 5000
            , pause: 'hover'
            , wrap: true
            });
            $('.manufactures .carousel .carousel-item').each(function () {
                var next = $(this);
                var last;
                for (var i = 0; i < 5; i++) {
                    next = next.next();
                    if (!next.length) {
                        next = $(this).siblings(':first');
                    }
                    last = next.children(':first-child').clone().appendTo($(this));
                }
                last.addClass('rightest');
            });
        });
    </script>
 </section>
}